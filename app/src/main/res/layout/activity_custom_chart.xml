<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.dbz.demo.view.LineChartView
        android:id="@+id/lineChart1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:dbz_back_color="@color/white"
        app:dbz_dot_text_size="13dp"
        app:dbz_x_text_color="@color/black"
        app:dbz_x_line_width="1dp"
        app:dbz_x_line_color="@color/color_bg"
        app:dbz_x_text_size="13dp"
        app:dbz_dot_text_color="@color/white"
        app:dbz_line_chart_color="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <com.dbz.demo.view.LineChartView
        android:id="@+id/lineChart2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:dbz_back_color="@color/white"
        app:dbz_dot_text_size="14dp"
        app:dbz_x_text_color="@color/black"
        app:dbz_x_line_width="1dp"
        app:dbz_x_line_color="@color/green_color"
        app:dbz_x_text_size="13dp"
        app:dbz_dot_text_color="@color/white"
        app:dbz_line_chart_color="@color/green_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineChart1"/>

</androidx.constraintlayout.widget.ConstraintLayout>